{
  "name": "drizzle-playground",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "license": "UNLICENSED",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "create-local-env": "dotenvx decrypt --stdout -fk .env.keys -f environments/.env.development > .env",
    "drizzle-kit": "drizzle-kit --config=./src/database/drizzle.config.ts",
    "helm:template": "helm template drizzle-playground ./helm --debug",
    "helm:upgrade": "helm upgrade --install drizzle-playground ./helm --wait --timeout 1m --atomic",
    "prepare": "husky",
    "services:start": "docker compose -f docker-compose.yml up",
    "services:stop": "docker compose -f docker-compose.yml down",
    "ship": "zx scripts/deploy.mjs",
    "start": "nodemon --exec ts-node src/index.ts",
    "test": "vitest"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.2",
    "cors": "^2.8.5",
    "dotenv": "17.2.3",
    "drizzle-kit": "^0.24.2",
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "express": "^5.1.0",
    "express-prom-bundle": "7.0.2",
    "http-terminator": "^3.2.0",
    "pg": "^8.13.0",
    "pino": "^10.0.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^11.2.2",
    "prom-client": "^15.1.3",
    "sort-package-json": "^2.10.1",
    "ts-node": "^10.9.2",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^0.14.0",
    "@types/cors": "^2",
    "@types/express": "^5.0.3",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.11.10",
    "eslint": "^9.39.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "husky": "9.0.11",
    "jiti": "^2.6.1",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "prettier-package-json": "^2.6.4",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.16",
    "zx": "^8.8.5"
  },
  "packageManager": "yarn@4.5.0"
}
